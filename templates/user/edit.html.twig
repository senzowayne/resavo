{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mt-4 p-4">
        <div class="jumbotron">
            <h1 class="display-4">Edition</h1>
            <p class="lead">Permet de modifier un usager</p>
            <hr>
        </div>
        <div class="row mt-5">
            <!-- col gauche -->
            <div class="col pl-4">

                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.firstName) }}

            </div>
            <!-- col droite -->
            <div class="col pl-4">

                {{ form_row(form.email) }}
                {{ form_row(form.hash) }}

            </div>
        </div>
        <!-- col button -->
        <div class="row">
            <div class="col-11">
                {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

                <a href="{{ path('user_index') }}">back to list</a>

                {{ include('user/_delete_form.html.twig') }}
            </div>

            <div class="col-1">
                <input class="btn btn-primary" type="submit" value="valider">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


