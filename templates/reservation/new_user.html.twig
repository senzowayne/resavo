{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Hello ReservationController!{% endblock %}

{% block body %}
    <div class="container mt-4 p-4">
        <div class="jumbotron">
            <h1 class="display-4">Inscription</h1>
            <p class="lead">Bienvenue sur la page de reservation</p>
            <hr>
        </div>
        <div class="row mt-5">
            <!-- col gauche -->
            <div class="col pl-4">

                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.fristname) }}

            </div>
            <!-- col droite -->
            <div class="col pl-4">

                {{ form_row(form.email) }}
                {{ form_row(form.hash) }}

            </div>
        </div>
        <!-- col button -->
        <div class="row">
            <div class="col-11"></div>
            <div class="col-1">
                <input class="btn btn-primary" type="submit" value="valider">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
